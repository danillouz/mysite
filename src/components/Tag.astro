---
interface Props {
  name: string
  children: any
  class?: string
}

const { name, class: className, ...props } = Astro.props
---

<a
  href={`/posts/tags/${name}`}
  class:list={[
    // Base styles.
    "inline-block px-3 py-1 rounded-sm text-xs sm:text-sm font-semibold tracking-wide",

    // Default color styles.
    "text-slate-600 dark:text-slate-300 bg-opacity-10 dark:bg-opacity-20 bg-slate-500 dark:bg-slate-400",

    // Custom styles.
    className,
  ]}
  {...props}
>
  <slot />
</a>
