---
interface Props {
  children: any
  class?: string
}

const { class: className, ...props } = Astro.props
---

<div class="my-16 sm:my-32">
  <div
    class:list={[
      // Base styles.
      "max-w-2xl lg:max-w-5xl mx-auto px-4 sm:px-8 lg:px-12",

      // Custom styles.
      className,
    ]}
    {...props}
  >
    <slot />
  </div>
</div>
