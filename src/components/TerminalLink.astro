---
interface Props {
  href: string
  children: any
  class?: string
}

const { href, class: className } = Astro.props
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class:list={[
    // Base styles.
    "inline-block font-medium underline underline-offset-2 decoration-1",

    // Custom styles.
    className,
  ]}
>
  <slot />
</a>
